<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<div class="container">
  <div class="row">
    <div class="Absolute-Center is-Responsive">
      <h1 class="page-header text-center">Your Profile</h1>
      <% if user_signed_in? %>
        <center style="padding: 10px;"><%= image_tag current_user.gravatar_url(:size => 100), :class => "img-circle avatar" %></center>        
      <% end %>


      <div id="logo-container"></div>
      <div class="col-sm-12 col-md-10 col-md-offset-1">
       <form action="" id="loginForm">
          <%= f.label :email %><br />
          <div class="form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
            <%= f.email_field :email, :class => "form-control",  autocomplete: "off" %>
          </div>
          <%= f.label :password %><br />
          <div class="form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-cog"></i></span>
            <%= f.password_field :password, :class => "form-control",  autocomplete: "off" %>
          </div>
          <%= f.label :password_confirmation %><br />
          <div class="form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-cog"></i></span>
            <%= f.password_field :password_confirmation, :class => "form-control",  autocomplete: "off" %>
          </div>
          <%= f.label :current_password %><br />
          <div class="form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-cog"></i></span>
            <%= f.password_field :current_password, :class => "form-control", autocomplete: "off" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update Account", :class => "btn btn-danger btn-block btn-lg" %>
            
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<% end %>

